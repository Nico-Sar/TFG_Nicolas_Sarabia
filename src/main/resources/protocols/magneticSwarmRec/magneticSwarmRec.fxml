<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" spacing="8">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Magnetic Swarm Reconfiguration Parameters" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <HBox spacing="10"><Label text="Speed (m/s)" prefWidth="150"/><TextField fx:id="speed" prefWidth="200"/></HBox>
    <HBox spacing="10"><Label text="Threshold (m)" prefWidth="150"/><TextField fx:id="threshold" prefWidth="200"/></HBox>
    <HBox spacing="10"><Label text="Min Flight Distance (m)" prefWidth="150"/><TextField fx:id="minFlightDistance" prefWidth="200"/></HBox>

    <HBox spacing="10"><Label text="Omni Repulsion Range (frdOmni)" prefWidth="150"/><TextField fx:id="frdOmni" prefWidth="200"/></HBox>
    <HBox spacing="10"><Label text="Dir Repulsion Range (frdDir)" prefWidth="150"/><TextField fx:id="frdDir" prefWidth="200"/></HBox>
    <HBox spacing="10"><Label text="Max Repulsion Factor" prefWidth="150"/><TextField fx:id="maxRepulsionFactor" prefWidth="200"/></HBox>

    <HBox spacing="10"><Label text="Omni Repulsion Strength" prefWidth="150"/><TextField fx:id="omniRepulsionStrength" prefWidth="200"/></HBox>
    <HBox spacing="10"><Label text="Dir Repulsion Strength" prefWidth="150"/><TextField fx:id="dirRepulsionStrength" prefWidth="200"/></HBox>
    <HBox spacing="10"><Label text="Direction Factor" prefWidth="150"/><TextField fx:id="dirFactor" prefWidth="200"/></HBox>

    <HBox spacing="10"><Label text="Weight Attraction" prefWidth="150"/><TextField fx:id="weightAttraction" prefWidth="200"/></HBox>
    <HBox spacing="10"><Label text="Weight Repulsion" prefWidth="150"/><TextField fx:id="weightRepulsion" prefWidth="200"/></HBox>
    <HBox spacing="10"><Label text="Angle Weight (assignment)" prefWidth="150"/><TextField fx:id="angleWeight" prefWidth="200"/></HBox>

    <HBox spacing="10"><Label text="Ground Formation" prefWidth="150"/><ComboBox fx:id="groundFormation" prefWidth="200"/></HBox>
    <HBox spacing="10"><Label text="Flying Formation" prefWidth="150"/><ComboBox fx:id="flyingFormation" prefWidth="200"/></HBox>
    <HBox spacing="10"><Label text="Neighbor Detection Radius" prefWidth="150"/><TextField fx:id="neighborDetectionRadius" prefWidth="200"/></HBox>

    <Button fx:id="okButton" text="OK" prefWidth="100" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
</VBox>
